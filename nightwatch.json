{
    "src_folders": [
        "tests"
    ],
    "custom_commands_path": "custom-commands",
    "output_folder": "reports",
    "selenium": {
        "start_process": true,
        "server_path": "./bin/selenium-server-standalone-3.9.1.jar",
        "log_path": "",
        "port": 4444,
        "cli_args": {
            "webdriver.chrome.driver": "./bin/chromedriver"
        }
    },
    "test_settings": {
        "default": {
            "launch_url": "https://localhost:3004/e2e.html?file=",
            "selenium_port": 4444,
            "selenium_host": "localhost",
            "desiredCapabilities": {
                "browserName": "chrome",
                "javascriptEnabled": true,
                "acceptSslCerts": true
            }
        }
    }
}